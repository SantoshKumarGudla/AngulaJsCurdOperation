<html ng-app="crudModule">
@{
    ViewBag.Title = "Index";
}


<head title="">
<style type="text/css">
    th 
    {
        background:#ff6a00;
    }
    span:hover {
cursor:pointer;
    }
    body {
        background:rgb(211, 106, 31) url('../../Content/img/black-thread.png');
  color: #fff;
  text-shadow: 0px 2px 3px #000;
    }
</style>
</head>

<body>

    <section>
            <h2 style="text-align: center">Using Angular for Performing CRUD Operations</h2>
        <div class="container" id="tblContainer" ng-controller="crudController">
            <div class="col-xs-4 form-group">
                <table id="tblCRUD" class="tabel table-condensed">
                    <tr>
                        <td>
                            <span>EmpNo</span>
                        </td>
                        <td>
                            <input type="text" id="eno" readonly="readonly" ng-model="EmpNo" class="form-control" />
                        </td>
                    </tr>
                    <tr>
                        <td>
                            <span>EmpName</span>
                        </td>
                        <td>
                            <input type="text" id="ename" required ng-model="EmpName" class="form-control" />
                        </td>
                    </tr>
                    <tr>
                        <td>
                            <span>Salary</span>
                        </td>
                        <td>
                            <input type="text" id="salary" required ng-model="Salary" class="form-control" />
                        </td>
                    </tr>
                    <tr>
                        <td>
                            <span>DeptName</span>
                        </td>
                        <td>
                            <input type="text" id="dname" required ng-model="DeptName" class="form-control" />
                        </td>
                    </tr>
                    <tr>
                        <td>
                            <span>Designation</span>
                        </td>
                        <td>
                            <input type="text" id="desig" required ng-model="Designation" class="form-control" />
                        </td>
                    </tr>

                    <tr>
<td>&nbsp;</td>
                        <td>
                            <input type="button" id="new" value="New" ng-click="clear()" class="btn btn-default" />
                            <input type="button" id="save" value="Save" ng-click="save()" class="btn btn-default" />
                            <input type="button" id="delete" value="Delete" ng-click="delete()" class="btn btn-default"/>
                        </td>
                    </tr>
                </table>
                <div style="color:green">{{Message}}</div>
            </div>
            <div class="col-xs-6">
                <div id="dvcollection">
                    <table id="tblcollections" class="tabel table-condensed" border="1" style="border: 2px solid #ccc !important">
                        <thead>
                            <tr>
                                <th>EmpNo</th>
                                <th>EmpName</th>
                                <th>Salary</th>
                                <th>DeptName</th>
                                <th>Designation</th>
                            </tr>
                        </thead>
                        <tbody ng-repeat="Emp in Employees">
                            <tr ng-click="get(Emp)">
                                <td><span title="Click to edit">{{Emp.EmpNo}}</span></td>
                                <td><span title="Click to edit">{{Emp.EmpName}}</span></td>
                                <td><span title="Click to edit">{{Emp.Salary}}</span></td>
                                <td><span title="Click to edit">{{Emp.DeptName}}</span></td>
                                <td><span title="Click to edit">{{Emp.Designation}}</span></td>
                            </tr>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </section>
